# GIT
alias gd="git diff --word-diff"
alias cm="git cm"
alias cob="git cob"
alias ra="git ra"
alias br="git branch"
alias st="git status -sb"
alias gs="st; echo ''; ra"

# CLI
alias ll="ls -l"
alias h="history"
alias back="cd -"
alias ..="cd .."
alias dev="cd ~/dev"
alias work="cd ~/work"

# BUNDLER
alias be="bundle exec"
alias ber="bundle exec rake"

# management
alias reload="source ~/bin/dotfiles/shell_config/aliases"
alias ea="subl -w ~/bin/dotfiles/shell_config/aliases && reload"

function rs {
	bundle exec rspec $*
}

function c {
	bundle exec cucumber $* --format progress
}

function e {
	subl # need to open the app first: no clue why
	subl -n ${1:-"."}
}
